<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" Name="Polygon" Version="0.1.0" Manufacturer="thesobercoder" UpgradeCode="fc6d3e57-0b38-4e0b-bed7-2ee9466f4791" Language="1033">
    <Package InstallerVersion="200" Compressed="yes" />
    <MediaTemplate EmbedCab="yes" />
    <MajorUpgrade DowngradeErrorMessage="A later version of Polygon is already installed. Setup will now exit." />

    <Directory Id="TARGETDIR" Name="SourceDir">
      <!-- Directory structure for per-machine installation -->
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="Polygon" />
      </Directory>

      <!-- Start Menu Folder -->
      <Directory Id="ProgramMenuFolder">
        <Directory Id="StartupFolder" Name="Startup" />
      </Directory>
    </Directory>

    <!-- Features -->
    <Feature Id="ProductFeature" Title="Polygon" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
		</Feature>

    <!-- Components for installation -->
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <!-- 32-bit components -->
      <Component Id="PolygonExecutable32" Guid="6c84730e-5d7a-4b00-9283-14c3ebb248b0">
        <File Id="PolygonExecutable32File" Source=".\build\polygon-x86.exe" Name="Polygon32.exe" KeyPath="yes" />
        <Shortcut Id="StartupPolygon32" Directory="StartupFolder" Name="Polygon" WorkingDirectory='INSTALLFOLDER' Icon="icon.ico" IconIndex="0" Advertise="yes" />
        <Condition><![CDATA[NOT VersionNT64]]></Condition>
      </Component>

      <!-- 64-bit components -->
      <Component Id="PolygonExecutable64" Guid="484fdf28-8bcb-495f-9c3d-877096b976cd">
        <File Id="PolygonExecutable64File" Source=".\build\polygon-x64.exe" Name="Polygon64.exe" KeyPath="yes" />
        <Shortcut Id="StartupPolygon64" Directory="StartupFolder" Name="Polygon" WorkingDirectory='INSTALLFOLDER' Icon="icon.ico" IconIndex="0" Advertise="yes" />
        <Condition><![CDATA[VersionNT64]]></Condition>
      </Component>

      <!-- Config components -->
      <Component Id="PolygonConfig" Guid="b1f011b5-5135-4992-ae60-c0bd3dec2890">
        <File Id="PolygonConfigFile" Source=".\polygon.ini" Name="polygon.ini" KeyPath="yes" />
      </Component>

       <!-- Uninstallation -->
      <Component Id="RemoveFolderComponent" Guid="81dc5882-d185-4551-89a3-08e63d761431">
        <RemoveFolder Id="INSTALLFOLDER" On="uninstall" />
      </Component>
    </ComponentGroup>

    <!-- Product icon -->
		<Icon Id="icon.ico" SourceFile=".\polygon.ico" />
		<Property Id="ARPPRODUCTICON" Value="icon.ico" />
  </Product>
</Wix>
